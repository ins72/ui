# Frontend Environment Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1
NEXT_PUBLIC_IDURAR_API_KEY=your_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_NAME=Mewayz
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_AUTH_PROVIDER=local

# Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Feature Flags
NEXT_PUBLIC_FEATURE_BLOG=true
NEXT_PUBLIC_FEATURE_CAREERS=true
NEXT_PUBLIC_FEATURE_DOCS=true
NEXT_PUBLIC_FEATURE_KNOWLEDGE_BASE=true
NEXT_PUBLIC_FEATURE_SUPPORT=true

# External Services
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true 